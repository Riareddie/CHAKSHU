# Supabase Configuration for Government Fraud Reporting System
# Copy this file to .env and fill in your actual values

# Supabase URL (Project URL from Supabase Dashboard)
VITE_SUPABASE_URL=https://your-project-ref.supabase.co

# Supabase Anonymous Key (Safe to use in frontend)
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Service Role Key (Server-side only, keep secure)
# Only use this for admin operations that bypass RLS
VITE_SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Application Configuration
VITE_APP_NAME=Government Fraud Reporting Portal
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Security Configuration
VITE_ENABLE_AUDIT_LOGGING=true
VITE_SESSION_TIMEOUT_MINUTES=30
VITE_MAX_FILE_UPLOAD_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.jpg,.jpeg,.png,.gif

# Government Specific Configuration
VITE_GOVERNMENT_DEPARTMENT=Cyber Crime Division
VITE_COMPLIANCE_LEVEL=government-grade
VITE_DATA_RETENTION_YEARS=7
VITE_ENCRYPTION_REQUIRED=true

# Development Configuration (Remove in production)
VITE_DEBUG_MODE=true
VITE_ENABLE_CONSOLE_LOGS=true
